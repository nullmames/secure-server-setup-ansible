[Unit]
Description=IPFS-Cluster daemon
After=network.target

[Service]
User={{ ansible_user }}
LimitNOFILE=infinity
MemorySwapMax=0
ExecStart=/usr/local/bin/ipfs-cluster-service daemon
Environment="IPFS_CLUSTER_FD_MAX=8192"

Restart=on-failure
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
